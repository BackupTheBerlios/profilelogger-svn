Root: HKCU; Subkey: "Software\Johannes Lochmann\ProfileLogger"; ValueType: string; ValueName: "FossilsPath"; ValueData: "{app}\fossils";
Root: HKCU; Subkey: "Software\Johannes Lochmann\ProfileLogger"; ValueType: string; ValueName: "ImagePath"; ValueData: "{app}\images";
Root: HKCU; Subkey: "Software\Johannes Lochmann\ProfileLogger"; ValueType: string; ValueName: "LanguageFile"; ValueData: "{app}\i18n\profilelogger_en.qm";
Root: HKCU; Subkey: "Software\Johannes Lochmann\ProfileLogger"; ValueType: string; ValueName: "LastFile"; ValueData: "";
Root: HKCU; Subkey: "Software\Johannes Lochmann\ProfileLogger"; ValueType: string; ValueName: "LithologiesPatternPath"; ValueData: "{app}\lithological_patterns";
Root: HKCU; Subkey: "Software\Johannes Lochmann\ProfileLogger"; ValueType: string; ValueName: "OutcropQualitiesPath"; ValueData: "{app}\outcrop_qualities";
Root: HKCU; Subkey: "Software\Johannes Lochmann\ProfileLogger"; ValueType: string; ValueName: "SedimentStructuresPath"; ValueData: "{app}\sediment_structures";



[Run]
